            from utils import now
              import asyncio

              async def foo():
                while True:
                  await asyncio.sleep(1)
                  output = now()
                  Element("outputDiv2").write(output)

                  out3 = Element("outputDiv3")
                  if output[-1] in ["0", "4", "8"]:
                    out3.write("It's espresso time!")
                  else:
                    out3.clear()

              pyscript.run_until_complete(foo())
        </py-script>
